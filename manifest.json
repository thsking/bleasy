

{
	"manifest_version": 2,
	"name":"bleasy",
	"version":"1.0",
	"browser_action": {
		"default_popup":"index.html"
	}, 
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["jquery-3.2.1.min.js", "background.js"]
		}
	],
	"permissions": [
      "storage",
      "tabs"
  ]

}
